{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "module": "esnext",
    "target": "es2016",
    "lib": ["es6", "es7", "dom", "es2018.promise", "es2019"],
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    // "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@app/*": ["app/*"],
    }
  },
  "include": ["./app"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts",
    "index.js"
    // "android",
    // "ios"
  ]
}
